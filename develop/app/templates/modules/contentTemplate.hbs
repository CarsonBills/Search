<div class="meta_results">
    <div class="number_results">
        {{#if totalCount}}
            <p>Showing <span class="current_results">{{content.length}}</span> of {{totalCount}} results</p>
        {{else}}
            <p>Showing all <span class="current_results">{{content.length}}</span> results</p>
        {{/if}}
    </div>
    {{#if totalCount}}
        <div class="show_more" onclick="doTrack('click.button', '', 'load_more', 'pagination');">SHOW MORE</div>
    {{else}}
        <div class="show_more_disabled">SHOW MORE</div>
    {{/if}}
    <div class="sort_display">
        <select name="sort" id='sort_select' class="sort_select">
            <option onclick="doTrack('click.sort', '', 'sort', 'Relevance');" value="-">Relevance</option>
            <option onclick="doTrack('click.sort', '', 'sort', 'Title A-Z');" value="title-Ascending">Title A-Z</option>
            <option onclick="doTrack('click.sort', '', 'sort', 'By Lowest Price');" value="us_list_price-Ascending">By Lowest Price</option>
            <option onclick="doTrack('click.sort', '', 'sort', 'Oldest');" value="pub_date-Ascending">Oldest</option>
            <option onclick="doTrack('click.sort', '', 'sort', 'Newest');" value="pub_date-Descending">Newest</option>
            <option onclick="doTrack('click.sort', '', 'sort', 'Author A-Z');" value="s_str_primary_author-Ascending">Author A-Z</option>
        </select>
    </div>
    <div class="breadcrumbs" onclick="doTrack('click.breadcrumb', '', 'breadcrumb', 'reset all or reset');">{{#if breadcrumbs}}{{{breadcrumbs}}}{{/if}}</div>
</div> 
<div class="advertisement_banner"></div>
<div class="results_content">
	{{#each content}}
		<div class="result">
            <a href="http://books.wwnorton.com/books/{{allMeta.s_str_isbn_formatted}}">
    			<div class="image" onclick="doTrack('click.result', '', 'book-image', '{{{_t}}}{{#if allMeta.sub_title}}+{{allMeta.sub_title}}{{/if}}.{{allMeta.s_str_isbn}}');">
    				{{#if allMeta.cover_image}}
    					<img data-id="{{@index}}" src="{{allMeta.cover_image}}">
    				{{else}}
    					<div class="no_cover"><p>No Image<br>Available</p></div>
    				{{/if}}
    			</div>
            </a>
			<div class="details">
				<div class="top">
                        <div class="title">
                            <a class="title_link" href="http://books.wwnorton.com/books/{{allMeta.s_str_isbn_formatted}}" onclick="doTrack('click.result', '', 'book-title', '{{{_t}}}{{#if allMeta.sub_title}}+{{allMeta.sub_title}}{{/if}}.{{allMeta.s_str_isbn}}');">
        						<h2 class="title_text">{{{ _t}}}{{#if allMeta.sub_title}}: {{{allMeta.sub_title}}}{{/if}}</h2>
                            </a>
                        </div>
					{{#if allMeta.edition_text}}
                    	<div class="edition">
							<p>{{ allMeta.edition_text}}</p>
						</div>
					{{/if}}
				</div>
                {{#if allMeta.authors}}
    				<div class='authors'>
    					<p>{{allMeta.authors.0.contributor_name}}</p>
    				</div>
                {{/if}}
				<div class="description">
					<p>{{{allMeta.s_str_summary_text}}}</p>
				</div>
                <div class="price_container" onclick="doTrack('click.result', '', 'options', '{{{_t}}}{{#if allMeta.sub_title}}+{{allMeta.sub_title}}{{/if}}.{{allMeta.s_str_isbn}}');">
                    {{#if_eq allMeta.s_int_textbook_only 1 }}
                        <a href="http://books.wwnorton.com/books/webad-detail-editions.aspx?id={{allMeta.content_id}}">
                            <div class="price">
                                {{#if allMeta.variants.1.isbn}}
                                    <p>{{allMeta.variants.length}} options starting at ${{allMeta.lowest_price}}</p>
                                {{else}}
                                    <p>{{allMeta.variants.length}} option for ${{allMeta.lowest_price}}</p>
                                {{/if}}
                            </div>
                        </a>
                    {{else}}
                        <a href="http://books.wwnorton.com/books/detail-formats.aspx?ID={{allMeta.content_id}}">
                            <div class="price">
                                {{#if allMeta.variants.1.isbn}}
                                    <p>{{allMeta.variants.length}} options starting at ${{allMeta.lowest_price}}</p>
                                {{else}}
                                    <p>{{allMeta.variants.length}} option for ${{allMeta.lowest_price}}</p>
                                {{/if}}
                            </div>
                        </a>
                    {{/if_eq}}
                </div>
			</div>
		</div>
	{{/each}}
</div>
<div class="footer_show_more">
    {{#if totalCount}}
        <div class="show_more" onclick="doTrack('click.button', '', 'load_more', 'pagination');">SHOW MORE</div>
    {{else}}
        <div class="show_more_disabled">SHOW MORE</div>
    {{/if}}
</div>

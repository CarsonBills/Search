{{#if categories}}
    <div class="categories filter_group">
        <h2 class="nav_heading">BROWSE BY TYPE</h2>
        <span class="chevron"><i class="fa fa-chevron-down" aria-hidden="true"></i>
        <i class="fa fa-chevron-right" aria-hidden="true"></i></span>
        <p class="category_level" style="display:none;">{{categories.name}}</p>
        <div class="filters_checkboxes">
            {{#each categories.refinements}}
                <div class="filter">
                    <h3 class="category-text" onclick="doTrack('click.filter', '', '{{this.google}}', '{{this.value}}');">{{this.value}}</h3>
                    {{#if this.count}}
                        <p class="count">{{this.count}}</p>
                    {{else}}
                        <p class="count">{{this.length}}</p>
                    {{/if}}
                </div>
            {{/each}}
        {{#if categories.moreRefinements}}
            <div class="nav_show_more">SHOW MORE</div>
        {{/if}}
        </div>
    </div>
{{/if}}

{{#each filters}}
    <div class="filters filter_group {{this.name}}">
        <h2 class="nav_heading">{{this.metadata.0.value}}</h2>
        <span class="chevron"><i class="fa fa-chevron-down" aria-hidden="true"></i>
        <i class="fa fa-chevron-right" aria-hidden="true"></i></span>
        <p class="category_level" style="display:none;">{{this.name}}</p>
        <div class="filters_checkboxes">
        {{#each refinements}}
            <div class="filter">
                    <p><input class="filter-checkbox" type="checkbox" data="{{../this.name}}"></input></p>
                    <h3 class="category-text filter-text" onclick="doTrack('click.filter', '', '{{this.google}}', '{{this.value}}');">{{this.value}}</h3>
                {{#if this.count}}
                    <p class="count">{{this.count}}</p>
                {{else}}
                    <p class="count">{{this.length}}</p>
                {{/if}}
            </div>
        {{/each}}
        {{#if this.moreRefinements}}
            <div class="nav_show_more">SHOW MORE</div>
        {{/if}}
        </div>
    </div>
{{/each}}

{{#each resources}}
    <div class="resources filter_group {{this.name}}">
        <h2 class="nav_heading">{{this.metadata.0.value}}</h2>
        <span class="chevron"><i class="fa fa-chevron-down" aria-hidden="true"></i>
        <i class="fa fa-chevron-right" aria-hidden="true"></i></span>
        <p class="category_level" style="display:none;">{{this.name}}</p>
        <div class="filters_checkboxes">
        {{#each refinements}}
            <div class="filter">
                <p><input class="filter-checkbox" type="checkbox" data="{{../this.name}}"></input></p>
                <h3 class="category-text filter-text" onclick="doTrack('click.filter', '', '{{this.google}}', '{{this.value}}');">{{../this.displayName}}</h3>
                {{#if this.count}}
                    <p class="count">{{this.count}}</p>
                {{/if}}
            </div>
        {{/each}}
        </div>
    </div>
{{/each}}